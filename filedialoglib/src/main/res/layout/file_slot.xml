<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/c_buttonD"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_folder_black"
        android:drawableStart="@drawable/ic_folder_black"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:visibility="gone" />

    <Button
        android:id="@+id/c_buttonF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_description_black"
        android:drawableStart="@drawable/ic_description_black"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/c_buttonMF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_description_black"
        android:drawableStart="@drawable/ic_description_black"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:visibility="gone" />

    <Button
        android:id="@+id/c_buttonR"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_storage_black"
        android:drawableStart="@drawable/ic_storage_black"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:visibility="gone" />
</RelativeLayout>